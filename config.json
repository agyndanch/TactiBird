{
  "capture": {
    "fps": 2,
    "monitor": 0
  },
  "detection": {
    "confidence_threshold": 0.7,
    "auto_detect_regions": true,
    "ocr_engine": "tesseract",
    "preprocessing": {
      "enable_denoising": true,
      "enable_sharpening": true,
      "scale_factor": 3
    }
  },
  "overlay": {
    "port": 8765,
    "update_interval": 1.0,
    "always_on_top": true,
    "transparent_background": true
  },
  "economy": {
    "suggestion_cooldown": 5.0,
    "interest_breakpoints": [10, 20, 30, 40, 50],
    "safe_health_threshold": 40,
    "critical_health_threshold": 20,
    "emergency_health_threshold": 10
  },
  "regions": {
    "gold": {
      "x_percent": 0.02,
      "y_percent": 0.88,
      "w_percent": 0.12,
      "h_percent": 0.06
    },
    "health": {
      "x_percent": 0.02,
      "y_percent": 0.82,
      "w_percent": 0.12,
      "h_percent": 0.06
    },
    "level": {
      "x_percent": 0.02,
      "y_percent": 0.76,
      "w_percent": 0.12,
      "h_percent": 0.06
    },
    "stage_round": {
      "x_percent": 0.45,
      "y_percent": 0.02,
      "w_percent": 0.10,
      "h_percent": 0.06
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/economy_overlay.log",
    "max_size": "10MB",
    "backup_count": 3
  }
}